@import '../bower_components/google-code-prettify/src/prettify.css'
@import '_settings'
@import '../../node_modules/jeet/lib/index'

html
  overflow: hidden

.step
  width: 1400px
  opacity: 1
  padding: 30px 50px
  color: #fff
  background: black

ul, ol
  padding-left: 1em
  list-style: square

.note
  font-size: ms(7)
  color: #aaa

.center
  text-align: center

code
  background: #444
  border-color: #888
  padding: 5px 10px
  font-size: ms(7)
  color: lighten(blue, 35%)

pre
  code
    background: none
    border: 0
    padding: 20px 25px
    display: block
    font-size: ms(6)
    line-height: ms(9)

// HighlightJS
.css, .html
  color: lighten(red, 10%)
  font-weight: bold
  .hljs-class, .hljs-title
    color: lighten(green, 25%)
    font-weight: normal
  .hljs-tag, .hljs-attribute
    color: lighten(blue, 40%)
    font-weight: normal
  .hljs-attr_selector, .hljs-value, .hljs-value .hljs-number
    color: lighten(yellow, 20%)
  .hljs-id
    color: darken(green, 40%)
    font-weight: normal
